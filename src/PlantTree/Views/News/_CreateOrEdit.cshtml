@model PlantTree.Data.Entities.News

<div class="form-group">
    <label asp-for="Date" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="ProjectId" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="ProjectId" class ="form-control" asp-items="ViewBag.ProjectId"></select>
    </div>
</div>
<div class="form-group">
    <label asp-for="ShortText" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="ShortText" class="form-control" />
        <span asp-validation-for="ShortText" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Text" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Title" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label for="MainImage" class="col-md-2 control-label">Картинка</label>
    @if (Model?.Photo?.Url != null)
    {
        <div class="hovereffect col-md-3 project-image">
            <img src="@Model?.Photo?.Url" alt="" asp-append-version="true" />
            <div class="overlay">
                <h2 class="delete main-image" data-id="@Model?.Photo?.Id">Удалить</h2>
            </div>
        </div>
    }
    <div class="col-md-10 col-md-offset-2">
        <input type="file" name="photo" id="Photo" accept="image/*" />
    </div>
</div>