@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model PlantTree.Data.Entities.Project

<div class="form-group">
    <label asp-for="Name" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Tag" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Tag" class="form-control" />
        <span asp-validation-for="Tag" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="ShortDescription" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="ShortDescription" class="form-control" />
        <span asp-validation-for="ShortDescription" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Description" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Status" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-control"></select>
        <span asp-validation-for="Status" class="text-danger" />
    </div>
</div>

<div class="form-group">
    <label asp-for="Goal" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Goal" class="form-control" />
        <span asp-validation-for="Goal" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Reached" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Reached" class="form-control" value="0" />
        <span asp-validation-for="Reached" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label for="MainImage" class="col-md-2 control-label">Главное изображение</label>
    @if (Model?.MainImage?.Url != null)
    {
        <div class="hovereffect col-md-3 project-image">
            <img src="@Model?.MainImage?.Url" alt="" asp-append-version="true" />
            <div class="overlay">
                <h2 class="delete main-image" data-id="@Model?.MainImage?.Id">Удалить</h2>
            </div>
        </div>
    }
    <div class="col-md-10 col-md-offset-2">
        <input type="file" name="mainImage" id="MainImage" accept="image/*"/>
    </div>
</div>

<div class="form-group">
    <label for="OtherImages" class="col-md-2 control-label">Дополнительные изображения</label>
    @if (Model?.OtherImages != null)
    {
        <div class="row col-md-10">
            @foreach (var otherImage in Model.OtherImages)
            {
            <div class="hovereffect project-image col-md-3">
                <img src="@otherImage.Url" class="col-md-3" alt="other image" asp-append-version="true" />
                <div class="overlay">
                    <h2 class="delete" data-id="@otherImage.Id">Удалить</h2>
                </div>
            </div>
            }
        </div>
    }
    <div class="col-md-10 col-md-offset-2">
        <input type="file" name="OtherImages" id="OtherImages" accept="image/*" multiple />
    </div>
</div>

